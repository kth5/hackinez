# Maintainer: Alexander Baldeck <alex.bldck@gmail.com> 
pkgname=xmr-stak-amd
pkgver=1.3.1
pkgrel=1
_commit=7f4a9972244828fe29462305b0644676e251d474
pkgdesc="Cryptonight AMD GPU miner"
arch=(x86_64)
url="https://github.com/fireice-uk/xmr-stak-amd"
license=('GPL')
depends=('libmicrohttpd')
makedepends=('cmake' 'amdapp-sdk')
source=("git+https://github.com/fireice-uk/xmr-stak-amd.git#commit=${_commit}")
md5sums=('SKIP')
_gitname=yaourt

build() {
	cd ${pkgname}
	sed 's@-march=westmere@-I/opt/AMDAPP/SDK/include -march=westmere@g' -i CMakeLists.txt
	cmake .
	make
}

package() {
	cd ${pkgname}
	install -D -m755 bin/xmr-stak-amd ${pkgdir}/usr/bin/xmr-stak-amd
	install -D -m644 config.txt ${pkgdir}/usr/share/${pkgname}/config.txt.example
}
